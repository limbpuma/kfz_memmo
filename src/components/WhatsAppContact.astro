        </svg>
        <span>Via WhatsApp senden</span>
      </button>
    </form>

    <div class="pt-4 mt-4 border-t border-gray-200 dark:border-slate-600">
      <div class="flex items-center space-x-2 text-sm text-gray-600 dark:text-gray-400">
        <svg class="w-4 h-4 text-green-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
        </svg>
        <span>Schnelle Antwort garantiert</span>
      </div>
      <div class="flex items-center mt-1 space-x-2 text-sm text-gray-600 dark:text-gray-400">
        <svg class="w-4 h-4 text-green-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 15v2m-6 4h12a2 2 0 002-2v-6a2 2 0 00-2-2H6a2 2 0 00-2 2v6a2 2 0 002 2zm10-10V7a4 4 0 00-8 0v4h8z"></path>
        </svg>
        <span>Ihre Daten sind sicher</span>
      </div>
    </div>
  </div>
</div>

<script>
  try {
    console.log('ÔøΩ Simple WhatsApp script loading...');
    
    function simpleWhatsAppInit() {
      const btn = document.getElementById('whatsapp-btn');
      const form = document.getElementById('whatsapp-form');
      const close = document.getElementById('close-form');
      
      if (!btn || !form || !close) {
        console.log('‚è≥ Elements not ready, retrying...');
        setTimeout(simpleWhatsAppInit, 100);
        return;
      }
      
      console.log('‚úÖ Simple WhatsApp initialized!');
      
      // Simple toggle function
      window.toggleWhatsApp = function() {
        try {
          if (form.style.display === 'none' || !form.style.display) {
            form.style.display = 'block';
            form.style.visibility = 'visible';
            form.style.opacity = '1';
            console.log('‚úÖ Form opened');
          } else {
            form.style.display = 'none';
            console.log('‚ùå Form closed');
          }
        } catch(e) {
          console.error('Toggle error:', e);
        }
      };
      
      // Close button
      close.onclick = function() {
        form.style.display = 'none';
        console.log('‚ùå Form closed via X');
      };
    }
    
    // Multiple initialization attempts
    if (document.readyState === 'loading') {
      document.addEventListener('DOMContentLoaded', simpleWhatsAppInit);
    } else {
      simpleWhatsAppInit();
    }
    
    setTimeout(simpleWhatsAppInit, 100);
    setTimeout(simpleWhatsAppInit, 500);
    setTimeout(simpleWhatsAppInit, 1000);
    
  } catch(e) {
    console.error('WhatsApp script error:', e);
  }

    // WhatsApp Business number (replace with actual number)
    const whatsappNumber = '4915757057121'; // Without + and spaces

    // Toggle form visibility
    whatsappBtn.addEventListener('click', (e) => {
      e.preventDefault();
      e.stopPropagation();
      console.log('üéØ WhatsApp button clicked!');
      
      const isHidden = whatsappForm.classList.contains('hidden') || whatsappForm.style.display === 'none';
      console.log('üìã Form is currently hidden:', isHidden);
      console.log('üìã Form classes:', whatsappForm.className);
      console.log('üìã Form display style:', whatsappForm.style.display);
      
      if (isHidden) {
        whatsappForm.classList.remove('hidden');
        whatsappForm.classList.add('show');
        whatsappForm.style.display = 'block';
        whatsappForm.style.visibility = 'visible';
        whatsappForm.style.opacity = '1';
        whatsappForm.style.animation = 'slideInRight 0.3s ease-out';
        console.log('‚úÖ Opening WhatsApp form');
      } else {
        whatsappForm.classList.add('hidden');
        whatsappForm.classList.remove('show');
        whatsappForm.style.display = 'none';
        whatsappForm.style.visibility = 'hidden';
        whatsappForm.style.opacity = '0';
        console.log('‚ùå Closing WhatsApp form');
      }
      
      // Force visibility check
      setTimeout(() => {
        console.log('üîç After toggle - Form classes:', whatsappForm.className);
        console.log('ÔøΩ After toggle - Form display:', whatsappForm.style.display);
        console.log('üîç After toggle - Form visible:', whatsappForm.offsetHeight > 0);
      }, 100);
    });

    // Close form
    closeForm.addEventListener('click', (e) => {
      e.preventDefault();
      e.stopPropagation();
      whatsappForm.classList.add('hidden');
      whatsappForm.classList.remove('show');
      whatsappForm.style.display = 'none';
      whatsappForm.style.visibility = 'hidden';
      whatsappForm.style.opacity = '0';
      console.log('‚ùå Form closed via X button');
    });

    // Handle form submission
    contactForm.addEventListener('submit', (e) => {
      e.preventDefault();
      
      const form = e.target as HTMLFormElement;
      const formData = new FormData(form);
      const service = formData.get('service') as string;
      const name = formData.get('name') as string;
      const phone = formData.get('phone') as string;
      const message = formData.get('message') as string;

      // Professional German message templates
      const messageTemplates = {
        'Notfall-Reparatur': `üö® NOTFALL - KFZ-Panne`,
        'Inspektion-Wartung': `üîß Anfrage f√ºr Inspektion/Wartung`,
        'HU-AU-Vorbereitung': `‚úÖ T√úV/HU-AU Terminanfrage`,
        'Unfallgutachten': `üìã Gutachten-Anfrage nach Unfall`,
        'Abschleppdienst': `üöõ Abschleppdienst ben√∂tigt`,
        'Bremsen-Fahrwerk': `üõû Bremsen/Fahrwerk Service`,
        'Elektrik-Diagnose': `‚ö° Elektrik-Diagnose Anfrage`,
        'Autoglas-Service': `ü™ü Autoglas Reparatur/Austausch`,
        'Kostenvoranschlag': `üí∞ Kostenvoranschlag gew√ºnscht`,
        'Terminanfrage': `üìÖ Terminvereinbarung`,
        'Allgemeine-Beratung': `üí¨ Beratungsanfrage`
      };

      const serviceEmoji = {
        'Notfall-Reparatur': 'üö®',
        'Inspektion-Wartung': 'üîß',
        'HU-AU-Vorbereitung': '‚úÖ',
        'Unfallgutachten': 'üìã',
        'Abschleppdienst': 'üöõ',
        'Bremsen-Fahrwerk': 'üõû',
        'Elektrik-Diagnose': '‚ö°',
        'Autoglas-Service': 'ü™ü',
        'Kostenvoranschlag': 'üí∞',
        'Terminanfrage': 'üìÖ',
        'Allgemeine-Beratung': 'üí¨'
      };

      // Get current time for greeting
      const now = new Date();
      const hour = now.getHours();
      let greeting;
      if (hour < 12) {
        greeting = "Guten Morgen";
      } else if (hour < 18) {
        greeting = "Guten Tag";
      } else {
        greeting = "Guten Abend";
      }

      // Create professional WhatsApp message
      let whatsappMessage = `${greeting} KFZ-Service Memmo Team! üëã\n\n`;
      
      // Add service header
      const serviceTitle = messageTemplates[service as keyof typeof messageTemplates] || `${serviceEmoji[service as keyof typeof serviceEmoji] || 'üîß'} Service-Anfrage`;
      whatsappMessage += `*${serviceTitle}*\n`;
      whatsappMessage += `‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê\n\n`;
      
      // Customer information
      whatsappMessage += `üë§ *Kundendaten:*\n`;
      whatsappMessage += `‚Ä¢ Name: ${name}\n`;
      if (phone) {
        whatsappMessage += `‚Ä¢ Telefon: ${phone}\n`;
      }
      whatsappMessage += `‚Ä¢ Service: ${service.replace('-', ' ')}\n\n`;
      
      // Message content
      whatsappMessage += `üìù *Beschreibung:*\n`;
      whatsappMessage += `"${message}"\n\n`;
      
      // Add service-specific information
      if (service === 'Notfall-Reparatur' || service === 'Abschleppdienst') {
        whatsappMessage += `üÜò *EILIG - Schnelle Hilfe ben√∂tigt!*\n`;
        whatsappMessage += `Bitte um zeitnahe R√ºckmeldung.\n\n`;
      } else if (service === 'Unfallgutachten') {
        whatsappMessage += `üìã *Gutachten-Service:*\n`;
        whatsappMessage += `Ben√∂tige unabh√§ngiges Kfz-Gutachten.\n`;
        whatsappMessage += `Unfall-/Schadensdatum bitte bei R√ºckruf kl√§ren.\n\n`;
      } else if (service === 'HU-AU-Vorbereitung') {
        whatsappMessage += `‚úÖ *T√úV-Service:*\n`;
        whatsappMessage += `M√∂chte Fahrzeug f√ºr HU/AU vorbereiten lassen.\n`;
        whatsappMessage += `Bitte Terminvorschlag unterbreiten.\n\n`;
      } else {
        whatsappMessage += `üïê *Verf√ºgbarkeit:*\n`;
        whatsappMessage += `Bin flexibel f√ºr Terminabsprache.\n\n`;
      }
      
      // Contact preferences
      whatsappMessage += `üìû *Kontakt-Wunsch:*\n`;
      whatsappMessage += `‚òëÔ∏è WhatsApp Antwort\n`;
      if (phone) {
        whatsappMessage += `‚òëÔ∏è Telefonischer R√ºckruf m√∂glich\n`;
      }
      whatsappMessage += `‚òëÔ∏è Pers√∂nlicher Besuch in der Werkstatt\n\n`;
      
      // Footer
      whatsappMessage += `üìç *KFZ-Service Memmo*\n`;
      whatsappMessage += `Eberstra√üe 12, 44145 Dortmund\n`;
      whatsappMessage += `üïê Mo-Fr: 08:00-18:00 Uhr\n\n`;
      whatsappMessage += `Vielen Dank f√ºr Ihre Zeit! üôè\n`;
      whatsappMessage += `Freue mich auf Ihre Antwort! üë®‚Äçüîß`;

      // Encode message for URL
      const encodedMessage = encodeURIComponent(whatsappMessage);
      
      // Create WhatsApp URL
      const whatsappUrl = `https://wa.me/${whatsappNumber}?text=${encodedMessage}`;
      
      // Open WhatsApp
      window.open(whatsappUrl, '_blank');
      
      // Show success feedback
      const button = form.querySelector('button[type="submit"]') as HTMLButtonElement;
      if (button) {
        const originalText = button.innerHTML;
        button.innerHTML = `
          <svg class="w-5 h-5 animate-spin" fill="none" viewBox="0 0 24 24">
            <circle class="opacity-25" cx="12" cy="12" r="10" stroke="currentColor" stroke-width="4"></circle>
            <path class="opacity-75" fill="currentColor" d="m4 12a8 8 0 018-8V0C5.373 0 0 5.373 0 12h4zm2 5.291A7.962 7.962 0 014 12H0c0 3.042 1.135 5.824 3 7.938l3-2.647z"></path>
          </svg>
          <span>WhatsApp wird ge√∂ffnet...</span>
        `;
        
        setTimeout(() => {
          button.innerHTML = `
            <svg class="w-5 h-5 text-green-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
            </svg>
            <span>Erfolgreich gesendet!</span>
          `;
          
          setTimeout(() => {
            button.innerHTML = originalText;
            form.reset();
            whatsappForm.classList.add('hidden');
          }, 2000);
        }, 1000);
      }
    });

    // Close form when clicking outside
    document.addEventListener('click', (e) => {
      const target = e.target as Node;
      if (!whatsappForm.contains(target) && !whatsappBtn.contains(target)) {
        whatsappForm.classList.add('hidden');
      }
    });
  }

  // Initialize on page load and on view transitions
  if (document.readyState === 'loading') {
    console.log('‚è≥ Document still loading, waiting for DOMContentLoaded');
    document.addEventListener('DOMContentLoaded', () => {
      console.log('üöÄ DOM Content Loaded - initializing WhatsApp');
      initWhatsAppWidget();
    });
  } else {
    console.log('‚úÖ Document already loaded, initializing immediately');
    initWhatsAppWidget();
  }
  
  document.addEventListener('astro:page-load', () => {
    console.log('üåü Astro page load - initializing WhatsApp');
    initWhatsAppWidget();
  });
  
  // Multiple fallback initializations
  window.addEventListener('load', () => {
    console.log('üîÑ Window load - initializing WhatsApp');
    setTimeout(initWhatsAppWidget, 100);
  });
  
  // Emergency initialization
  setTimeout(() => {
    console.log('‚è∞ Emergency init - initializing WhatsApp');
    initWhatsAppWidget();
  }, 1000);
  
  // Debug: Log when script loads
  console.log('WhatsApp script loaded');
</script>

<style>
  @keyframes customPulse {
    0%, 100% {
      transform: scale(1);
      box-shadow: 0 0 0 0 rgba(34, 197, 94, 0.7);
    }
    50% {
      transform: scale(1.05);
      box-shadow: 0 0 0 10px rgba(34, 197, 94, 0);
    }
  }

  @keyframes slideInRight {
    from {
      transform: translateX(100%);
      opacity: 0;
    }
    to {
      transform: translateX(0);
      opacity: 1;
    }
  }

  #whatsapp-widget {
    font-family: system-ui, -apple-system, sans-serif;
  }

  #whatsapp-btn {
    animation: customPulse 2s infinite;
    z-index: 99999 !important;
    position: relative !important;
  }

  #whatsapp-btn:hover {
    animation: none;
    transform: scale(1.1);
  }

  #whatsapp-form {
    z-index: 99998 !important;
  }

  #whatsapp-form.show {
    display: block !important;
    opacity: 1 !important;
    visibility: visible !important;
  }

  #whatsapp-form.hidden {
    display: none !important;
    opacity: 0 !important;
    visibility: hidden !important;
  }

  @media (max-width: 640px) {
    #whatsapp-form {
      width: calc(100vw - 2rem);
      right: 1rem;
      left: 1rem;
    }
  }
</style>
