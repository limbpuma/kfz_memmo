---
// WhatsApp Contact Component
---

<div class="fixed z-50 bottom-6 right-6" id="whatsapp-widget">
  <!-- WhatsApp Floating Button -->
  <button 
    id="whatsapp-btn"
    class="p-4 text-white transition-all duration-300 transform bg-green-500 rounded-full shadow-lg hover:bg-green-600 hover:scale-110 animate-pulse"
    title="Kontakt via WhatsApp"
  >
    <svg class="w-6 h-6" fill="currentColor" viewBox="0 0 24 24">
      <path d="M17.472 14.382c-.297-.149-1.758-.867-2.03-.967-.273-.099-.471-.148-.67.15-.197.297-.767.966-.94 1.164-.173.199-.347.223-.644.075-.297-.15-1.255-.463-2.39-1.475-.883-.788-1.48-1.761-1.653-2.059-.173-.297-.018-.458.13-.606.134-.133.298-.347.446-.52.149-.174.198-.298.298-.497.099-.198.05-.371-.025-.52-.075-.149-.669-1.612-.916-2.207-.242-.579-.487-.5-.669-.51-.173-.008-.371-.01-.57-.01-.198 0-.52.074-.792.372-.272.297-1.04 1.016-1.04 2.479 0 1.462 1.065 2.875 1.213 3.074.149.198 2.096 3.2 5.077 4.487.709.306 1.262.489 1.694.625.712.227 1.36.195 1.871.118.571-.085 1.758-.719 2.006-1.413.248-.694.248-1.289.173-1.413-.074-.124-.272-.198-.57-.347m-5.421 7.403h-.004a9.87 9.87 0 01-5.031-1.378l-.361-.214-3.741.982.998-3.648-.235-.374a9.86 9.86 0 01-1.51-5.26c.001-5.45 4.436-9.884 9.888-9.884 2.64 0 5.122 1.03 6.988 2.898a9.825 9.825 0 012.893 6.994c-.003 5.45-4.437 9.884-9.885 9.884m8.413-18.297A11.815 11.815 0 0012.05 0C5.495 0 .16 5.335.157 11.892c0 2.096.547 4.142 1.588 5.945L.057 24l6.305-1.654a11.882 11.882 0 005.683 1.448h.005c6.554 0 11.89-5.335 11.893-11.893A11.821 11.821 0 0020.885 3.515"/>
    </svg>
  </button>

  <!-- Quick Contact Form -->
  <div 
    id="whatsapp-form" 
    class="absolute right-0 hidden p-6 bg-white border border-gray-200 rounded-lg shadow-xl bottom-16 dark:bg-slate-800 w-80 dark:border-slate-600"
  >
    <div class="flex items-center justify-between mb-4">
      <h3 class="text-lg font-semibold text-gray-800 dark:text-white">Schneller Kontakt</h3>
      <button id="close-form" class="text-gray-500 hover:text-gray-700 dark:text-gray-400 dark:hover:text-gray-200">
        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
        </svg>
      </button>
    </div>

    <form id="whatsapp-contact-form" class="space-y-4">
      <div>
        <label for="service" class="block mb-1 text-sm font-medium text-gray-700 dark:text-gray-300">
          Service wählen
        </label>
        <select 
          id="service" 
          name="service" 
          required
          class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-green-500 dark:bg-slate-700 dark:border-slate-600 dark:text-white"
        >
          <option value="">Service auswählen...</option>
          <option value="Notfall-Reparatur">🚨 Notfall-Reparatur</option>
          <option value="Inspektion-Wartung">🔧 Inspektion & Wartung</option>
          <option value="HU-AU-Vorbereitung">✅ HU/AU-Vorbereitung</option>
          <option value="Unfallgutachten">📋 Unfallgutachten</option>
          <option value="Abschleppdienst">🚛 24h Abschleppdienst</option>
          <option value="Bremsen-Fahrwerk">🛞 Bremsen & Fahrwerk</option>
          <option value="Elektrik-Diagnose">⚡ Elektrik & Diagnose</option>
          <option value="Autoglas-Service">🪟 Autoglas-Service</option>
          <option value="Kostenvoranschlag">💰 Kostenvoranschlag</option>
          <option value="Terminanfrage">📅 Terminanfrage</option>
          <option value="Allgemeine-Beratung">💬 Allgemeine Beratung</option>
        </select>
      </div>

      <div>
        <label for="name" class="block mb-1 text-sm font-medium text-gray-700 dark:text-gray-300">
          Ihr Name
        </label>
        <input 
          type="text" 
          id="name" 
          name="name" 
          required
          placeholder="Max Mustermann"
          class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-green-500 dark:bg-slate-700 dark:border-slate-600 dark:text-white dark:placeholder-gray-400"
        >
      </div>

      <div>
        <label for="phone" class="block mb-1 text-sm font-medium text-gray-700 dark:text-gray-300">
          Telefon (optional)
        </label>
        <input 
          type="tel" 
          id="phone" 
          name="phone" 
          placeholder="+49 123 456789"
          class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-green-500 dark:bg-slate-700 dark:border-slate-600 dark:text-white dark:placeholder-gray-400"
        >
      </div>

      <div>
        <label for="message" class="block mb-1 text-sm font-medium text-gray-700 dark:text-gray-300">
          Nachricht
        </label>
        <textarea 
          id="message" 
          name="message" 
          rows="3" 
          required
          placeholder="z.B. Mein Auto springt nicht an, brauche Hilfe... / Möchte einen Termin für Inspektion vereinbaren..."
          class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-green-500 dark:bg-slate-700 dark:border-slate-600 dark:text-white dark:placeholder-gray-400"
        ></textarea>
      </div>

      <button 
        type="submit"
        class="flex items-center justify-center w-full px-4 py-2 space-x-2 font-medium text-white transition-colors duration-200 bg-green-500 rounded-md hover:bg-green-600"
      >
        <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
          <path d="M17.472 14.382c-.297-.149-1.758-.867-2.03-.967-.273-.099-.471-.148-.67.15-.197.297-.767.966-.94 1.164-.173.199-.347.223-.644.075-.297-.15-1.255-.463-2.39-1.475-.883-.788-1.48-1.761-1.653-2.059-.173-.297-.018-.458.13-.606.134-.133.298-.347.446-.52.149-.174.198-.298.298-.497.099-.198.05-.371-.025-.52-.075-.149-.669-1.612-.916-2.207-.242-.579-.487-.5-.669-.51-.173-.008-.371-.01-.57-.01-.198 0-.52.074-.792.372-.272.297-1.04 1.016-1.04 2.479 0 1.462 1.065 2.875 1.213 3.074.149.198 2.096 3.2 5.077 4.487.709.306 1.262.489 1.694.625.712.227 1.36.195 1.871.118.571-.085 1.758-.719 2.006-1.413.248-.694.248-1.289.173-1.413-.074-.124-.272-.198-.57-.347m-5.421 7.403h-.004a9.87 9.87 0 01-5.031-1.378l-.361-.214-3.741.982.998-3.648-.235-.374a9.86 9.86 0 01-1.51-5.26c.001-5.45 4.436-9.884 9.888-9.884 2.64 0 5.122 1.03 6.988 2.898a9.825 9.825 0 012.893 6.994c-.003 5.45-4.437 9.884-9.885 9.884m8.413-18.297A11.815 11.815 0 0012.05 0C5.495 0 .16 5.335.157 11.892c0 2.096.547 4.142 1.588 5.945L.057 24l6.305-1.654a11.882 11.882 0 005.683 1.448h.005c6.554 0 11.89-5.335 11.893-11.893A11.821 11.821 0 0020.885 3.515"/>
        </svg>
        <span>Via WhatsApp senden</span>
      </button>
    </form>

    <div class="pt-4 mt-4 border-t border-gray-200 dark:border-slate-600">
      <div class="flex items-center space-x-2 text-sm text-gray-600 dark:text-gray-400">
        <svg class="w-4 h-4 text-green-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
        </svg>
        <span>Schnelle Antwort garantiert</span>
      </div>
      <div class="flex items-center mt-1 space-x-2 text-sm text-gray-600 dark:text-gray-400">
        <svg class="w-4 h-4 text-green-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 15v2m-6 4h12a2 2 0 002-2v-6a2 2 0 00-2-2H6a2 2 0 00-2 2v6a2 2 0 002 2zm10-10V7a4 4 0 00-8 0v4h8z"></path>
        </svg>
        <span>Ihre Daten sind sicher</span>
      </div>
    </div>
  </div>
</div>

<script>
  function initWhatsAppWidget() {
    const whatsappBtn = document.getElementById('whatsapp-btn');
    const whatsappForm = document.getElementById('whatsapp-form');
    const closeForm = document.getElementById('close-form');
    const contactForm = document.getElementById('whatsapp-contact-form');

    if (!whatsappBtn || !whatsappForm || !closeForm || !contactForm) return;

    // WhatsApp Business number (replace with actual number)
    const whatsappNumber = '4915757057121'; // Without + and spaces

    // Toggle form visibility
    whatsappBtn.addEventListener('click', () => {
      whatsappForm.classList.toggle('hidden');
      if (!whatsappForm.classList.contains('hidden')) {
        whatsappForm.style.animation = 'slideInRight 0.3s ease-out';
      }
    });

    // Close form
    closeForm.addEventListener('click', () => {
      whatsappForm.classList.add('hidden');
    });

    // Handle form submission
    contactForm.addEventListener('submit', (e) => {
      e.preventDefault();
      
      const form = e.target as HTMLFormElement;
      const formData = new FormData(form);
      const service = formData.get('service') as string;
      const name = formData.get('name') as string;
      const phone = formData.get('phone') as string;
      const message = formData.get('message') as string;

      // Professional German message templates
      const messageTemplates = {
        'Notfall-Reparatur': `🚨 NOTFALL - KFZ-Panne`,
        'Inspektion-Wartung': `🔧 Anfrage für Inspektion/Wartung`,
        'HU-AU-Vorbereitung': `✅ TÜV/HU-AU Terminanfrage`,
        'Unfallgutachten': `📋 Gutachten-Anfrage nach Unfall`,
        'Abschleppdienst': `🚛 Abschleppdienst benötigt`,
        'Bremsen-Fahrwerk': `🛞 Bremsen/Fahrwerk Service`,
        'Elektrik-Diagnose': `⚡ Elektrik-Diagnose Anfrage`,
        'Autoglas-Service': `🪟 Autoglas Reparatur/Austausch`,
        'Kostenvoranschlag': `💰 Kostenvoranschlag gewünscht`,
        'Terminanfrage': `📅 Terminvereinbarung`,
        'Allgemeine-Beratung': `💬 Beratungsanfrage`
      };

      const serviceEmoji = {
        'Notfall-Reparatur': '🚨',
        'Inspektion-Wartung': '🔧',
        'HU-AU-Vorbereitung': '✅',
        'Unfallgutachten': '📋',
        'Abschleppdienst': '🚛',
        'Bremsen-Fahrwerk': '🛞',
        'Elektrik-Diagnose': '⚡',
        'Autoglas-Service': '🪟',
        'Kostenvoranschlag': '💰',
        'Terminanfrage': '📅',
        'Allgemeine-Beratung': '💬'
      };

      // Get current time for greeting
      const now = new Date();
      const hour = now.getHours();
      let greeting;
      if (hour < 12) {
        greeting = "Guten Morgen";
      } else if (hour < 18) {
        greeting = "Guten Tag";
      } else {
        greeting = "Guten Abend";
      }

      // Create professional WhatsApp message
      let whatsappMessage = `${greeting} KFZ-Service Memmo Team! 👋\n\n`;
      
      // Add service header
      const serviceTitle = messageTemplates[service as keyof typeof messageTemplates] || `${serviceEmoji[service as keyof typeof serviceEmoji] || '🔧'} Service-Anfrage`;
      whatsappMessage += `*${serviceTitle}*\n`;
      whatsappMessage += `═══════════════════════\n\n`;
      
      // Customer information
      whatsappMessage += `👤 *Kundendaten:*\n`;
      whatsappMessage += `• Name: ${name}\n`;
      if (phone) {
        whatsappMessage += `• Telefon: ${phone}\n`;
      }
      whatsappMessage += `• Service: ${service.replace('-', ' ')}\n\n`;
      
      // Message content
      whatsappMessage += `📝 *Beschreibung:*\n`;
      whatsappMessage += `"${message}"\n\n`;
      
      // Add service-specific information
      if (service === 'Notfall-Reparatur' || service === 'Abschleppdienst') {
        whatsappMessage += `🆘 *EILIG - Schnelle Hilfe benötigt!*\n`;
        whatsappMessage += `Bitte um zeitnahe Rückmeldung.\n\n`;
      } else if (service === 'Unfallgutachten') {
        whatsappMessage += `📋 *Gutachten-Service:*\n`;
        whatsappMessage += `Benötige unabhängiges Kfz-Gutachten.\n`;
        whatsappMessage += `Unfall-/Schadensdatum bitte bei Rückruf klären.\n\n`;
      } else if (service === 'HU-AU-Vorbereitung') {
        whatsappMessage += `✅ *TÜV-Service:*\n`;
        whatsappMessage += `Möchte Fahrzeug für HU/AU vorbereiten lassen.\n`;
        whatsappMessage += `Bitte Terminvorschlag unterbreiten.\n\n`;
      } else {
        whatsappMessage += `🕐 *Verfügbarkeit:*\n`;
        whatsappMessage += `Bin flexibel für Terminabsprache.\n\n`;
      }
      
      // Contact preferences
      whatsappMessage += `📞 *Kontakt-Wunsch:*\n`;
      whatsappMessage += `☑️ WhatsApp Antwort\n`;
      if (phone) {
        whatsappMessage += `☑️ Telefonischer Rückruf möglich\n`;
      }
      whatsappMessage += `☑️ Persönlicher Besuch in der Werkstatt\n\n`;
      
      // Footer
      whatsappMessage += `📍 *KFZ-Service Memmo*\n`;
      whatsappMessage += `Eberstraße 12, 44145 Dortmund\n`;
      whatsappMessage += `🕐 Mo-Fr: 08:00-18:00 Uhr\n\n`;
      whatsappMessage += `Vielen Dank für Ihre Zeit! 🙏\n`;
      whatsappMessage += `Freue mich auf Ihre Antwort! 👨‍🔧`;

      // Encode message for URL
      const encodedMessage = encodeURIComponent(whatsappMessage);
      
      // Create WhatsApp URL
      const whatsappUrl = `https://wa.me/${whatsappNumber}?text=${encodedMessage}`;
      
      // Open WhatsApp
      window.open(whatsappUrl, '_blank');
      
      // Show success feedback
      const button = form.querySelector('button[type="submit"]') as HTMLButtonElement;
      if (button) {
        const originalText = button.innerHTML;
        button.innerHTML = `
          <svg class="w-5 h-5 animate-spin" fill="none" viewBox="0 0 24 24">
            <circle class="opacity-25" cx="12" cy="12" r="10" stroke="currentColor" stroke-width="4"></circle>
            <path class="opacity-75" fill="currentColor" d="m4 12a8 8 0 018-8V0C5.373 0 0 5.373 0 12h4zm2 5.291A7.962 7.962 0 014 12H0c0 3.042 1.135 5.824 3 7.938l3-2.647z"></path>
          </svg>
          <span>WhatsApp wird geöffnet...</span>
        `;
        
        setTimeout(() => {
          button.innerHTML = `
            <svg class="w-5 h-5 text-green-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
            </svg>
            <span>Erfolgreich gesendet!</span>
          `;
          
          setTimeout(() => {
            button.innerHTML = originalText;
            form.reset();
            whatsappForm.classList.add('hidden');
          }, 2000);
        }, 1000);
      }
    });

    // Close form when clicking outside
    document.addEventListener('click', (e) => {
      const target = e.target as Node;
      if (!whatsappForm.contains(target) && !whatsappBtn.contains(target)) {
        whatsappForm.classList.add('hidden');
      }
    });
  }

  // Initialize on page load and on view transitions
  document.addEventListener('DOMContentLoaded', initWhatsAppWidget);
  document.addEventListener('astro:page-load', initWhatsAppWidget);
</script>

<style>
  @keyframes slideInRight {
    from {
      transform: translateX(100%);
      opacity: 0;
    }
    to {
      transform: translateX(0);
      opacity: 1;
    }
  }

  #whatsapp-widget {
    font-family: system-ui, -apple-system, sans-serif;
  }

  @media (max-width: 640px) {
    #whatsapp-form {
      width: calc(100vw - 2rem);
      right: 1rem;
      left: 1rem;
    }
  }
</style>
