    </svg>
  </button>

  <!-- Quick Contact Form -->
  <div 
    id="whatsapp-form" 
    class="hidden absolute bottom-16 right-0 bg-white dark:bg-slate-800 rounded-lg shadow-xl p-6 w-80 border border-gray-200 dark:border-slate-600"
  >
    <div class="flex items-center justify-between mb-4">
      <h3 class="text-lg font-semibold text-gray-800 dark:text-white">Schneller Kontakt</h3>
      <button id="close-form" class="text-gray-500 hover:text-gray-700 dark:text-gray-400 dark:hover:text-gray-200">
        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
        </svg>
      </button>
    </div>

    <form id="whatsapp-contact-form" class="space-y-4">
      <div>
        <label for="service" class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-1">
          Service wählen
        </label>
        <select 
          id="service" 
          name="service" 
          required
          class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-green-500 dark:bg-slate-700 dark:border-slate-600 dark:text-white"
        >
          <option value="">Service auswählen...</option>
          <option value="Reparatur">KFZ-Reparatur</option>
          <option value="Inspektion">Inspektion & Wartung</option>
          <option value="HU/AU">HU/AU Service</option>
          <option value="Gutachten">Unfallgutachten</option>
          <option value="Abschleppdienst">24h Abschleppdienst</option>
          <option value="Beratung">Allgemeine Beratung</option>
        </select>
      </div>

      <div>
        <label for="name" class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-1">
          Ihr Name
        </label>
        <input 
          type="text" 
          id="name" 
          name="name" 
          required
          placeholder="Max Mustermann"
          class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-green-500 dark:bg-slate-700 dark:border-slate-600 dark:text-white dark:placeholder-gray-400"
        >
      </div>

      <div>
        <label for="phone" class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-1">
          Telefon (optional)
        </label>
        <input 
          type="tel" 
          id="phone" 
          name="phone" 
          placeholder="+49 123 456789"
          class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-green-500 dark:bg-slate-700 dark:border-slate-600 dark:text-white dark:placeholder-gray-400"
        >
      </div>

      <div>
        <label for="message" class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-1">
          Nachricht
        </label>
        <textarea 
          id="message" 
          name="message" 
          rows="3" 
          required
          placeholder="Beschreiben Sie kurz Ihr Anliegen..."
          class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-green-500 dark:bg-slate-700 dark:border-slate-600 dark:text-white dark:placeholder-gray-400"
        ></textarea>
      </div>

      <button 
        type="submit"
        class="w-full bg-green-500 hover:bg-green-600 text-white font-medium py-2 px-4 rounded-md transition-colors duration-200 flex items-center justify-center space-x-2"
      >
        <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
          <path d="M17.472 14.382c-.297-.149-1.758-.867-2.03-.967-.273-.099-.471-.148-.67.15-.197.297-.767.966-.94 1.164-.173.199-.347.223-.644.075-.297-.15-1.255-.463-2.39-1.475-.883-.788-1.48-1.761-1.653-2.059-.173-.297-.018-.458.13-.606.134-.133.298-.347.446-.52.149-.174.198-.298.298-.497.099-.198.05-.371-.025-.52-.075-.149-.669-1.612-.916-2.207-.242-.579-.487-.5-.669-.51-.173-.008-.371-.01-.57-.01-.198 0-.52.074-.792.372-.272.297-1.04 1.016-1.04 2.479 0 1.462 1.065 2.875 1.213 3.074.149.198 2.096 3.2 5.077 4.487.709.306 1.262.489 1.694.625.712.227 1.36.195 1.871.118.571-.085 1.758-.719 2.006-1.413.248-.694.248-1.289.173-1.413-.074-.124-.272-.198-.57-.347m-5.421 7.403h-.004a9.87 9.87 0 01-5.031-1.378l-.361-.214-3.741.982.998-3.648-.235-.374a9.86 9.86 0 01-1.51-5.26c.001-5.45 4.436-9.884 9.888-9.884 2.64 0 5.122 1.03 6.988 2.898a9.825 9.825 0 012.893 6.994c-.003 5.45-4.437 9.884-9.885 9.884m8.413-18.297A11.815 11.815 0 0012.05 0C5.495 0 .16 5.335.157 11.892c0 2.096.547 4.142 1.588 5.945L.057 24l6.305-1.654a11.882 11.882 0 005.683 1.448h.005c6.554 0 11.89-5.335 11.893-11.893A11.821 11.821 0 0020.885 3.515"/>
        </svg>
        <span>Via WhatsApp senden</span>
      </button>
    </form>

    <div class="mt-4 pt-4 border-t border-gray-200 dark:border-slate-600">
      <div class="flex items-center space-x-2 text-sm text-gray-600 dark:text-gray-400">
        <svg class="w-4 h-4 text-green-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
        </svg>
        <span>Schnelle Antwort garantiert</span>
      </div>
      <div class="flex items-center space-x-2 text-sm text-gray-600 dark:text-gray-400 mt-1">
        <svg class="w-4 h-4 text-green-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 15v2m-6 4h12a2 2 0 002-2v-6a2 2 0 00-2-2H6a2 2 0 00-2 2v6a2 2 0 002 2zm10-10V7a4 4 0 00-8 0v4h8z"></path>
        </svg>
        <span>Ihre Daten sind sicher</span>
      </div>
    </div>
  </div>
</div>

<script>
  function initWhatsAppWidget() {
    const whatsappBtn = document.getElementById('whatsapp-btn');
    const whatsappForm = document.getElementById('whatsapp-form');
    const closeForm = document.getElementById('close-form');
    const contactForm = document.getElementById('whatsapp-contact-form');

    if (!whatsappBtn || !whatsappForm || !closeForm || !contactForm) return;

    // WhatsApp Business number (replace with actual number)
    const whatsappNumber = '4915757057121'; // Without + and spaces

    // Toggle form visibility
    whatsappBtn.addEventListener('click', () => {
      whatsappForm.classList.toggle('hidden');
      if (!whatsappForm.classList.contains('hidden')) {
        whatsappForm.style.animation = 'slideInRight 0.3s ease-out';
      }
    });

    // Close form
    closeForm.addEventListener('click', () => {
      whatsappForm.classList.add('hidden');
    });

    // Handle form submission
    contactForm.addEventListener('submit', (e) => {
      e.preventDefault();
      
      const form = e.target as HTMLFormElement;
      const formData = new FormData(form);
      const service = formData.get('service') as string;
      const name = formData.get('name') as string;
      const phone = formData.get('phone') as string;
      const message = formData.get('message') as string;

      // Create WhatsApp message
      let whatsappMessage = `Hallo KFZ-Service Memmo,\n\n`;
      whatsappMessage += `Service: ${service}\n`;
      whatsappMessage += `Name: ${name}\n`;
      if (phone) whatsappMessage += `Telefon: ${phone}\n`;
      whatsappMessage += `\nNachricht:\n${message}\n\n`;
      whatsappMessage += `Vielen Dank für Ihre Zeit!`;

      // Encode message for URL
      const encodedMessage = encodeURIComponent(whatsappMessage);
      
      // Create WhatsApp URL
      const whatsappUrl = `https://wa.me/${whatsappNumber}?text=${encodedMessage}`;
      
      // Open WhatsApp
      window.open(whatsappUrl, '_blank');
      
      // Reset form and hide
      form.reset();
      whatsappForm.classList.add('hidden');
    });

    // Close form when clicking outside
    document.addEventListener('click', (e) => {
      const target = e.target as Node;
      if (!whatsappForm.contains(target) && !whatsappBtn.contains(target)) {
        whatsappForm.classList.add('hidden');
      }
    });
  }

  // Initialize on page load and on view transitions
  document.addEventListener('DOMContentLoaded', initWhatsAppWidget);
  document.addEventListener('astro:page-load', initWhatsAppWidget);
</script>

<style>
  @keyframes slideInRight {
    from {
      transform: translateX(100%);
      opacity: 0;
    }
    to {
      transform: translateX(0);
      opacity: 1;
    }
  }

  #whatsapp-widget {
    font-family: system-ui, -apple-system, sans-serif;
  }

  @media (max-width: 640px) {
    #whatsapp-form {
      width: calc(100vw - 2rem);
      right: 1rem;
      left: 1rem;
    }
  }
</style>
