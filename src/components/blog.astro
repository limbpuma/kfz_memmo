---
import { Image } from 'astro:assets';
import { blogData, sectionHeaders } from "../data";
---

<div class="container">
  <div class="grid grid-cols-1 pb-8 text-center">
    <h6 class="text-blue-600 text-base font-medium uppercase mb-2">
      {sectionHeaders.blogs.title}
    </h6>
    <h3 class="mb-4 md:text-2xl text-xl font-medium dark:text-white">
      {sectionHeaders.blogs.subtitle}
    </h3>
    <p class="text-slate-400 max-w-xl mx-auto">
      {sectionHeaders.blogs.text}
    </p>
  </div>

  <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6 mt-8">
    {blogData.map((item) => (
      <div class="blog relative rounded-md shadow-sm shadow-slate-200 dark:shadow-slate-800 overflow-hidden group">
        <!-- Contenedor de relaciÃ³n fija -->
        <div class="aspect-[16/10] relative w-full">
          <Image 
            src={item.image} 
            alt={item.title}
            class="absolute inset-0 w-full h-full object-cover transition duration-500 group-hover:scale-105"
            width={800}
            height={500}
            quality={85}
            format="webp"
          />
        </div>

        <div class="content p-6 bg-white dark:bg-slate-900">
          <a 
            href="/blog-detail" 
            class="text-lg hover:text-blue-600 dark:text-white dark:hover:text-blue-600 transition-all duration-500 ease-in-out font-medium"
          >
            {item.title}
          </a>
          <p class="text-slate-400 mt-3">{item.desc}</p>

          <div class="mt-5">
            <a 
              href={item.buttonUrl} 
              class="btn btn-link hover:text-blue-600 dark:hover:text-blue-600 after:bg-blue-600 dark:text-white transition duration-500"
            >
              {item.buttonLabel}
              <i class="uil uil-arrow-right"></i>
            </a>
          </div>
        </div>
      </div>
    ))}
  </div>
</div>
