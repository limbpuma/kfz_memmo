---
import { pricingData, sectionHeaders,pricingNotice } from "../data";

interface PricingData{
    title: string;
    amount: number;
    desc: string;
    buttonLabel: string;
    feature: string[];
}
---

<div class="container">
    <div class="grid grid-cols-1 pb-8 text-center">
        <h6 class="text-blue-600 text-base font-medium uppercase mb-2">{sectionHeaders.pricing.title}</h6>
        <h3 class="mb-4 md:text-2xl text-xl font-medium dark:text-white">{sectionHeaders.pricing.subtitle}</h3>
        <p class="text-slate-400 max-w-xl mx-auto">{sectionHeaders.pricing.text}</p>
    </div>
    
    <div class="flex flex-wrap">
        {pricingData.map((item:PricingData)=>(
            <div class="w-full md:w-1/2 lg:w-1/3 px-0 md:px-3 mt-8">
                <div
                    class="flex flex-col pt-8 pb-8 bg-zinc-50 hover:bg-white dark:bg-gray-800 dark:hover:bg-black rounded-md shadow-sm shadow-slate-200 dark:shadow-slate-700 transition duration-500">
                    <div class="px-8 pb-8">
                        <h3 class="mb-6 text-lg md:text-xl font-medium dark:text-white">{item.title}</h3>
                        <div class="mb-6 dark:text-white/70">
                            <span class="relative -top-5 text-2xl">â‚¬</span>
                            <span class="text-5xl font-semibold dark:text-white">{item.amount}</span>
                            <span class="inline-block ms-1">/ Ab</span>
                        </div>
                        <p class="mb-6 text-slate-430 dark:text-slate-300">{item.desc}</p>
                        <a href="" class="btn inline-block bg-blue-700 hover:bg-blue-900 text-white font-semibold py-3 px-6 rounded-md shadow-lg transition duration-300 ease-in-out transform hover:scale-105 focus:outline-none focus:ring-2 focus:ring-blue-600 w-full">{item.buttonLabel}</a>
                    </div>
                    <div class="border-b border-slate-200 dark:border-slate-700"></div>
                    <ul class="self-start px-8 pt-8">
                        {item.feature.map((feature)=>(
                            <li class="flex items-center my-1 text-slate-400">
                                <i class="uil uil-check-circle text-lg text-blue-500 me-1"></i>
                                <span>{feature}</span>
                            </li>
                        ))}
                    </ul>
                </div>
            </div>
        ))}
    </div>
    <div class="flex justify-center text-slate-400 mt-2"><span class="text-blue-600">*</span>{pricingNotice}</div>
</div>