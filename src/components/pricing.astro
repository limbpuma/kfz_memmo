---
import { pricingData, sectionHeaders, pricingNotice } from "../data";
interface PricingData {
  title: string;
  amount: number | string;
  desc: string;
  feature: string[];
}
---

<div class="container">
  <div class="grid grid-cols-1 pb-8 text-center">
    <h6 class="mb-2 text-base font-medium text-green-600 uppercase">{sectionHeaders.pricing.title}</h6>
    <h3 class="mb-4 text-xl font-medium md:text-2xl dark:text-white">{sectionHeaders.pricing.subtitle}</h3>
    <p class="max-w-xl mx-auto text-slate-400">{sectionHeaders.pricing.text}</p>
  </div>
  
  <div class="flex flex-wrap">
    {pricingData.map((item: PricingData) => (
      <div class="w-full px-0 mt-8 md:w-1/2 lg:w-1/3 md:px-3">
        <div class="flex flex-col pt-8 pb-8 transition duration-500 rounded-md shadow-sm bg-zinc-50 hover:bg-white dark:bg-gray-800 dark:hover:bg-black shadow-slate-200 dark:shadow-slate-700">
          <div class="px-8 pb-8">
            <h3 class="mb-6 text-lg font-medium md:text-xl dark:text-white">{item.title}</h3>
            <div class="mb-6 dark:text-white/70">
              <span class="relative text-2xl -top-5">€</span>
              <span class="text-5xl font-semibold dark:text-white">{item.amount}</span>
              <span class="inline-block ms-1">/ Ab</span>
            </div>
            <p class="mb-6 text-slate-430 dark:text-slate-300">{item.desc}</p>
            <!-- Eliminado el botón de kaufen/contact -->
          </div>

          <div class="border-b border-slate-200 dark:border-slate-700"></div>

          <ul class="self-start px-8 pt-8 space-y-2">
            {item.feature.map((feature) => (
              <li class="flex items-center text-slate-400">
                <i class="text-lg text-green-500 uil uil-check-circle me-2"></i>
                <span>{feature}</span>
              </li>
            ))}
          </ul>
        </div>
      </div>
    ))}
  </div>

  <div class="flex justify-center mt-6 text-sm text-slate-400">
    <span class="text-green-600">*</span> {pricingNotice}
  </div>
</div>
