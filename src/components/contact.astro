---
import { sectionHeaders, contactData } from "../data";
import Button from '../components/Button.astro';
---

<div class="container">
  <div class="grid grid-cols-1 pb-8 text-center">
    <h6 class="mb-2 text-base font-medium text-green-600 uppercase">{sectionHeaders.contact.title}</h6>
    <h3 class="mb-4 text-xl font-medium md:text-2xl dark:text-white">{sectionHeaders.contact.subtitle}</h3>

    <p class="max-w-xl mx-auto text-slate-400">{sectionHeaders.contact.text}</p>
  </div>

  <div class="grid items-start grid-cols-1 gap-8 mt-8 lg:grid-cols-12 md:grid-cols-2">
    
    <!-- Left Section: Emergency Services & Workshop Info -->
    <div class="lg:col-span-7">
      
      <!-- Emergency Contact Card -->
      <div class="p-6 mb-6 rounded-lg shadow-lg bg-gradient-to-r from-red-500 to-red-600">
        <div class="flex items-center space-x-4 text-white">
          <div class="p-3 rounded-full bg-opacity-20">
            <i class="text-2xl uil uil-ambulance"></i>
          </div>
          <div>
            <h4 class="text-xl font-semibold">24/7 Notfall & Abschleppdienst</h4>
            <p class="text-red-100">Schnelle Hilfe bei Pannen und Unfällen</p>
            <a href="tel:+4915757057121" class="inline-flex items-center mt-2 text-lg font-bold hover:underline">
              <i class="mr-2 uil uil-phone"></i>
              +49 1575 7057121
            </a>
          </div>
        </div>
      </div>

      <!-- Workshop Services Grid -->
      <div class="grid grid-cols-1 gap-4 md:grid-cols-2">
        
        <!-- Service Card 1 -->
        <div class="p-4 transition-shadow bg-white border border-gray-100 rounded-lg shadow-sm dark:bg-slate-900 dark:border-slate-700 hover:shadow-md">
          <div class="flex items-center space-x-3">
            <div class="p-2 text-green-600 bg-green-100 rounded-lg dark:bg-green-900 dark:text-green-300">
              <i class="text-xl uil uil-wrench"></i>
            </div>
            <div>
              <h5 class="font-medium text-gray-800 dark:text-white">KFZ-Reparaturen</h5>
              <p class="text-sm text-gray-600 dark:text-gray-400">Alle Marken & Modelle</p>
            </div>
          </div>
        </div>

        <!-- Service Card 2 -->
        <div class="p-4 transition-shadow bg-white border border-gray-100 rounded-lg shadow-sm dark:bg-slate-900 dark:border-slate-700 hover:shadow-md">
          <div class="flex items-center space-x-3">
            <div class="p-2 text-blue-600 bg-blue-100 rounded-lg dark:bg-blue-900 dark:text-blue-300">
              <i class="text-xl uil uil-clipboard-notes"></i>
            </div>
            <div>
              <h5 class="font-medium text-gray-800 dark:text-white">Unfallgutachten</h5>
              <p class="text-sm text-gray-600 dark:text-gray-400">Unabhängig & neutral</p>
            </div>
          </div>
        </div>

        <!-- Service Card 3 -->
        <div class="p-4 transition-shadow bg-white border border-gray-100 rounded-lg shadow-sm dark:bg-slate-900 dark:border-slate-700 hover:shadow-md">
          <div class="flex items-center space-x-3">
            <div class="p-2 text-purple-600 bg-purple-100 rounded-lg dark:bg-purple-900 dark:text-purple-300">
              <i class="text-xl uil uil-shield-check"></i>
            </div>
            <div>
              <h5 class="font-medium text-gray-800 dark:text-white">HU/AU Service</h5>
              <p class="text-sm text-gray-600 dark:text-gray-400">TÜV-Vorbereitung</p>
            </div>
          </div>
        </div>

        <!-- Service Card 4 -->
        <div class="p-4 transition-shadow bg-white border border-gray-100 rounded-lg shadow-sm dark:bg-slate-900 dark:border-slate-700 hover:shadow-md">
          <div class="flex items-center space-x-3">
            <div class="p-2 text-orange-600 bg-orange-100 rounded-lg dark:bg-orange-900 dark:text-orange-300">
              <i class="text-xl uil uil-car"></i>
            </div>
            <div>
              <h5 class="font-medium text-gray-800 dark:text-white">Wartung</h5>
              <p class="text-sm text-gray-600 dark:text-gray-400">Inspektion & Service</p>
            </div>
          </div>
        </div>
      </div>

      <!-- Visit Us Section -->
      <div class="p-6 mt-6 rounded-lg bg-gray-50 dark:bg-slate-800">
        <div class="text-center">
          <h4 class="mb-3 text-lg font-semibold text-gray-800 dark:text-white">
            Besuchen Sie unsere moderne Werkstatt
          </h4>
          <p class="mb-4 text-gray-600 dark:text-gray-400">
            Persönliche Beratung und transparente Kostenvoranschläge
          </p>
          <Button 
            label="Wie Sie uns finden" 
            href="https://maps.app.goo.gl/xWYKDi76jY2Rc7X1A" 
            target="_blank" 
            width="fit" 
          />
        </div>
      </div>
    </div>

    <!-- Right Section: Contact Information -->
    <div class="lg:col-span-5">
      <div class="p-6 bg-white border border-gray-100 rounded-lg shadow-sm dark:bg-slate-900 dark:border-slate-700">
        
        <!-- Contact Header -->
        <div class="mb-6 text-center">
          <h4 class="mb-2 text-xl font-semibold text-gray-800 dark:text-white">Kontakt aufnehmen</h4>
          <p class="text-gray-600 dark:text-gray-400">Wir sind persönlich für Sie da</p>
        </div>

        <div class="space-y-6">
          
          <!-- Phone Contact -->
          <div class="p-4 rounded-lg bg-gray-50 dark:bg-slate-800">
            <div class="flex items-center space-x-3">
              <div class="p-2 text-green-600 bg-green-100 rounded-lg dark:bg-green-900 dark:text-green-300">
                <i class="text-xl uil uil-phone"></i>
              </div>
              <div class="flex-1">
                <h5 class="font-medium text-gray-800 dark:text-white">{contactData.contactInfo.phone.title}</h5>
                <a href={contactData.contactInfo.phone.href} class="font-medium text-green-600 hover:text-green-700">
                  {contactData.contactInfo.phone.value}
                </a>
              </div>
            </div>
          </div>

          <!-- Email Contact -->
          <div class="p-4 rounded-lg bg-gray-50 dark:bg-slate-800">
            <div class="flex items-center space-x-3">
              <div class="p-2 text-blue-600 bg-blue-100 rounded-lg dark:bg-blue-900 dark:text-blue-300">
                <i class="text-xl uil uil-envelope"></i>
              </div>
              <div class="flex-1">
                <h5 class="font-medium text-gray-800 dark:text-white">{contactData.contactInfo.email.title}</h5>
                <a href="mailto:m.dmli@web.de" class="text-blue-600 hover:text-blue-700">
                  {contactData.contactInfo.email.value}
                </a>
              </div>
            </div>
          </div>

          <!-- Opening Hours -->
          <div class="p-4 rounded-lg bg-gray-50 dark:bg-slate-800">
            <div class="flex items-start space-x-3">
              <div class="p-2 text-purple-600 bg-purple-100 rounded-lg dark:bg-purple-900 dark:text-purple-300">
                <i class="text-xl uil uil-schedule"></i>
              </div>
              <div class="flex-1">
                <h5 class="mb-2 font-medium text-gray-800 dark:text-white">Öffnungszeiten</h5>
                <div class="space-y-1 text-sm text-gray-600 dark:text-gray-400">
                  <div class="flex justify-between">
                    <span>Montag–Freitag:</span>
                    <span class="font-medium">08:00 – 18:00</span>
                  </div>
                  <div class="flex justify-between">
                    <span>Samstag & Sonntag:</span>
                    <span class="text-red-500">Geschlossen</span>
                  </div>
                </div>
              </div>
            </div>
          </div>

          <!-- Address -->
          <div class="p-4 rounded-lg bg-gray-50 dark:bg-slate-800">
            <div class="flex items-center space-x-3">
              <div class="p-2 text-orange-600 bg-orange-100 rounded-lg dark:bg-orange-900 dark:text-orange-300">
                <i class="text-xl uil uil-map-marker"></i>
              </div>
              <div class="flex-1">
                <h5 class="font-medium text-gray-800 dark:text-white">{contactData.contactInfo.location.title}</h5>
                <a href="https://maps.app.goo.gl/xWYKDi76jY2Rc7X1A" target="_blank" 
                   class="text-sm text-orange-600 hover:text-orange-700 hover:underline">
                  {contactData.contactInfo.location.address}
                </a>
              </div>
            </div>
          </div>

        </div>

        <!-- Quick Actions -->
        <div class="pt-6 mt-6 border-t border-gray-200 dark:border-slate-600">
          <div class="text-center">
            <p class="mb-4 text-sm text-gray-600 dark:text-gray-400">
              Für schnellen Kontakt nutzen Sie unser WhatsApp-Widget
            </p>
            <div class="flex items-center justify-center space-x-2 text-green-600">
              <i class="uil uil-whatsapp"></i>
              <span class="text-sm font-medium">Sofortige Antwort garantiert</span>
            </div>
          </div>
        </div>

      </div>
    </div>
  </div>
</div>
