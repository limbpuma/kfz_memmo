---
interface Props {
  href?: string;
  label: string;
  type?: "submit" | "button";
  width?: "full" | "auto" | "fit";
  class?: string;
  rel?: string;
  target?: "_blank" | "_self";
}

const { href, label, type = "button",target = "_self",  width = "auto", rel,class: customClass = "" } = Astro.props;

const widthClass = {
  full: "w-full",
  auto: "w-auto",
  fit: "w-fit"
}[width] ?? "w-auto";
---

{href ? (
  <a 
    href={href}
    rel={rel}
    target={target}
    class={`inline-block ${widthClass} bg-green-700 hover:bg-green-900 text-white font-semibold py-3 px-6 rounded-md shadow-lg transition duration-300 ease-in-out transform hover:scale-105 focus:outline-none focus:ring-2 focus:ring-yellow-400 ${customClass}`}
  >
    {label}
  </a>
) : (
  <button
    type={type}
    class={`inline-block ${widthClass} bg-green-700 hover:bg-green-900 text-white font-semibold py-3 px-6 rounded-md shadow-lg transition duration-300 ease-in-out transform hover:scale-105 focus:outline-none focus:ring-2 focus:ring-yellow-400 ${customClass}`}
  >
    {label}
  </button>
)}
