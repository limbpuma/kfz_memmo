---
import { featureData, sectionHeaders } from "../data";
---
<div class="container lg mx-auto">
    <div class="grid grid-cols-1 lg:grid-cols-2 md:grid-cols-2 pb-8 items-center">
        <div>
            <h6 class="text-blue-600 text-base font-medium uppercase mb-2">{sectionHeaders.feature.title}</h6>
            <h3 class="mb-4 md:text-2xl text-xl font-semibold dark:text-white md:mb-0">{sectionHeaders.feature.subtitle} <br></h3>
        </div>
        <div>
            <p class="text-slate-400 max-w-xl">{sectionHeaders.feature.text}</p>
        </div>
    </div>

    <div class="grid grid-cols-1 lg:grid-cols-3 md:grid-cols-2 gap-6">
        {featureData.map((item)=>( 
             <div class="features p-6 hover:shadow-xl hover:shadow-slate-100 dark:hover:shadow-slate-800 transition duration-500 rounded-3xl mt-8">
                <div class="size-20 bg-blue-600/5 text-blue-600 rounded-xl text-3xl flex align-middle justify-center items-center shadow-sm hover:shadow-lg">
                    <i class={item.icon}></i>
                </div>
                <div class="content mt-7">
                    <a href={item.buttonUrl} class="text-lg hover:text-blue-600 dark:text-white dark:hover:text-blue-500 transition-all duration-500 ease-in-out font-medium">{item.title}</a>
                    <p class="text-slate-400 mt-3">{item.desc}</p>
                    <div class="mt-5">
                        <a href="" class="btn btn-link hover:text-blue-600 dark:hover:text-blue-500 after:bg-blue-600 dark:text-white transition duration-500">{item.buttonLabel} <i class="uil uil-arrow-right"></i></a>
                    </div>
                </div>
            </div>
        ))}
    </div>
</div>