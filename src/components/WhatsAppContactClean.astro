<style>
  @keyframes customPulse {
    0%, 100% {
      transform: scale(1);
      box-shadow: 0 0 0 0 rgba(34, 197, 94, 0.7);
    }
    50% {
      transform: scale(1.05);
      box-shadow: 0 0 0 10px rgba(34, 197, 94, 0);
    }
  }

  @keyframes slideInRight {
    from {
      transform: translateX(100%);
      opacity: 0;
    }
    to {
      transform: translateX(0);
      opacity: 1;
    }
  }

  #whatsapp-widget {
    font-family: system-ui, -apple-system, sans-serif;
    z-index: 999999 !important;
  }

  #whatsapp-btn {
    animation: customPulse 2s infinite;
    z-index: 999999 !important;
    position: relative !important;
  }

  #whatsapp-btn:hover {
    animation: none;
    transform: scale(1.1);
  }

  #whatsapp-btn:active {
    transform: scale(0.95);
  }

  #whatsapp-form {
    z-index: 99998 !important;
    max-height: 80vh;
    overflow-y: auto;
    
    /* Default positioning for mobile-first */
    position: fixed;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    width: 90vw;
    max-width: 350px;
  }

  /* Desktop positioning */
  @media (min-width: 640px) {
    #whatsapp-form {
      position: absolute;
      top: auto;
      left: auto;
      right: 0;
      bottom: 4rem;
      transform: none;
      width: 320px;
      max-width: none;
    }
  }

  #whatsapp-form.show {
    display: block !important;
    visibility: visible !important;
    opacity: 1 !important;
  }

  #whatsapp-form.hidden {
    display: none !important;
    visibility: hidden !important;
    opacity: 0 !important;
  }

  /* Force visibility with high specificity */
  #whatsapp-widget #whatsapp-form[style*="display: block"] {
    display: block !important;
    visibility: visible !important;
    opacity: 1 !important;
  }

  /* Cookie banner compatibility */
  body.cc-banner-active #whatsapp-widget {
    z-index: 9999 !important;
  }

  body.cc-banner-active #whatsapp-btn {
    z-index: 9999 !important;
  }

  /* Extra mobile adjustments */
  @media (max-width: 480px) {
    #whatsapp-widget {
      bottom: 1rem !important;
      right: 1rem !important;
    }

    #whatsapp-backdrop {
      display: none !important;
    }

    #whatsapp-backdrop.show {
      display: block !important;
    }

    #whatsapp-form {
      width: 95vw !important;
      max-width: none !important;
      padding: 1rem !important;
      max-height: 85vh !important;
      top: 50% !important;
      left: 50% !important;
      transform: translate(-50%, -50%) !important;
    }

    /* Adjust when cookie banner is active */
    body.cc-banner-active #whatsapp-widget {
      bottom: 6rem !important;
    }

    body.cc-banner-active #whatsapp-form {
      top: 45% !important;
    }
  }
</style>
