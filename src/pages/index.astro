---
import About from '../components/about.astro';
import Blog from '../components/blog.astro';
import Client from '../components/client.astro';
import Contact from '../components/contact.astro';
import Counter from '../components/counter.astro';
import Cta from '../components/cta.astro';
import Feature from '../components/feature.astro';
import Footer from '../components/footer.astro';
import Partner from '../components/partner.astro';
import Portfolio from '../components/portfolio.astro';
import Pricing from '../components/pricing.astro';
import Team from '../components/team.astro';
import Work from '../components/work.astro';
import Layout from '../layouts/Layout.astro';
import Navbar from '../components/navbar.astro';
import { heroData } from "../data";
import videoWebm from '../assets/images/bg/video.webm';
---

<Layout>
    <Navbar/>
	<section class="relative w-full h-auto min-h-[80vh] lg:min-h-[100vh] overflow-hidden" id="home">
        <!-- ðŸŽ¬ VIDEO BACKGROUND -->
        <video 
            autoplay 
            muted 
            loop 
            playsinline 
            class="absolute top-0 left-0 w-full h-full object-cover z-0"
        >
		<source src={videoWebm} type="video/webm" />

            Your browser does not support the video tag.
        </video>

        <!-- DARK OVERLAY -->
        <div class="absolute inset-0 bg-black opacity-60 z-10"></div>

        <!-- CONTENT -->
        <div class="container relative z-20 py-36 lg:py-64">
            <div class="grid grid-cols-1 text-center">
                <h4 class="text-white lg:text-5xl text-4xl lg:leading-normal leading-normal font-medium mb-7">
                    {heroData.title}
                    <br />
                    {heroData.titleTwo}
                    <span class="typewrite relative text-type-element" data-period="2000" data-type={`[ "${heroData.subtitle.join('", "')}"]`}></span>
                </h4>

                <p class="text-white opacity-70 mb-0 max-w-2xl text-lg mx-auto">
                    {heroData.description}
                </p>

                <div class="relative mt-10">
                    <a 
                        href={heroData.buttonUrl} 
                        class="inline-block bg-blue-700 hover:bg-blue-900 text-white font-semibold py-3 px-6 rounded-md shadow-lg transition duration-300 ease-in-out transform hover:scale-105 focus:outline-none focus:ring-2 focus:ring-blue-600"
                    >
                        {heroData.buttonLabel}
                    </a>
                </div>
            </div>
        </div>
    </section>
	  

    <section class="relative md:py-24 py-16 bg-gray-50 dark:bg-slate-800" id="about">
		<About/>
	</section>

	<section class="relative md:py-24 py-16" id="features">
		<Feature/>
		<Work/>
	</section>

	 <section class="relative md:py-24 py-16 bg-gray-50 dark:bg-slate-800" id="portfolio">
		<Portfolio/>
	</section>

	<Cta/>

	<section class="relative md:py-24 py-16 bg-gray-50 dark:bg-slate-800" id="testi">
		<Client/>
	</section>

	<section class="relative md:py-24 py-16" id="pricing">
		<Pricing/>
	</section>

	<section class="relative md:py-24 py-16 bg-gray-50 dark:bg-slate-800" id="team">
		<Team/>
		<Counter/>
		<Partner/>
	</section>

	<section class="relative md:py-24 py-16" id="blog">
		<Blog/>
	</section>

	<section class="relative md:py-24 py-16 bg-gray-50 dark:bg-slate-800" id="contact">
		<Contact/>
	</section>

	<Footer/>
</Layout>
